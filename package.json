{
  "name": "ptudw-17tn-nhom13",
  "version": "1.0.0",
  "repository": "https://github.com/lamnhh/PTUDW-17TN-Nhom13.git",
  "author": "Team 13",
  "license": "MIT",
  "scripts": {
    "start": "export TYPEORM_URL=$DATABASE_URL && node build/server.js",
    "copy-views": "node copy-view.js",
    "tsc": "tsc",
    "dev:server": "concurrently \"nodemon --watch server --ext html,ts --exec 'npm-run-all copy-views start'\" \"tsc --watch\"",
    "dev:client": "webpack --env development --watch",
    "build:server": "cross-env NODE_ENV=production npm-run-all copy-views tsc",
    "build:client": "cross-env NODE_ENV=production webpack --env production",
    "build": "npm-run-all build:server build:client",
    "heroku-postbuild": "yarn build && yarn db:rebuild",
    "migration:create": "typeorm migration:create -n",
    "migration:run": "typeorm migration:run -t=false",
    "migration:revert": "typeorm migration:revert",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "schema:drop": "typeorm schema:drop",
    "db:rebuild": "export TYPEORM_URL=$DATABASE_URL && yarn schema:drop && yarn migration:run && yarn seed:run",
    "lint": "eslint client/ server/ --ext .ts --fix",
    "prettier": "prettier \"client/**/*.ts\" \"server/**/*.ts\" --write --loglevel=warn"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "chance": "^1.1.6",
    "concurrently": "^5.2.0",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.2",
    "csv-parser": "^2.3.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "form-data": "^3.0.0",
    "formidable": "^1.2.2",
    "googleapis": "^59.0.0",
    "http-errors": "^1.7.3",
    "http-terminator": "^2.0.3",
    "husky": "^4.2.5",
    "jquery": "^3.5.1",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.19",
    "method-override": "^3.0.0",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.16",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^8.2.1",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "rss-parser": "^3.9.0",
    "slugify": "^1.4.5",
    "tailwindcss": "^1.4.6",
    "ts-node": "^8.10.2",
    "typeorm": "^0.2.25",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@types/bcrypt": "^3.0.0",
    "@types/chance": "^1.1.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/faker": "^4.1.12",
    "@types/formidable": "^1.0.31",
    "@types/hbs": "^4.0.1",
    "@types/http-errors": "^1.6.3",
    "@types/http-terminator": "^2.0.1",
    "@types/jquery": "^3.3.38",
    "@types/lodash": "^4.14.154",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.0.1",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^6.4.0",
    "@types/nunjucks": "^3.1.3",
    "@types/passport": "^1.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/slick-carousel": "^1.6.34",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "autoprefixer": "^9.7.6",
    "css-loader": "^3.5.3",
    "eslint": "^7.7.0",
    "eslint-loader": "^4.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.4",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "shelljs": "^0.8.4",
    "slick-carousel": "^1.8.1",
    "source-map-loader": "^0.2.4",
    "stylelint": "^13.5.0",
    "stylelint-config-recommended": "^3.0.0",
    "terser-webpack-plugin": "^3.0.1",
    "ts-loader": "^7.0.4",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "*.(ts|json)": [
      "yarn prettier",
      "yarn lint",
      "git add"
    ]
  }
}
