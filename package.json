    "@types/node": "^14.0.1",
    "@types/nunjucks": "^3.1.3",
    "@types/slick-carousel": "^1.6.34",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "autoprefixer": "^9.7.6",
