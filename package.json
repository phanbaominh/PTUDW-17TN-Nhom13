    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.1",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "tailwindcss": "^1.4.6",
    "typeorm": "^0.2.25"
  },
