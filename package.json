  "scripts": {
    "start": "node build/server.js",
    "copy-views": "node copy-view.js",
    "tsc": "tsc",
    "dev:server": "concurrently \"nodemon --watch server --ext html,ts --exec 'npm-run-all copy-views start'\" \"tsc --watch\"",
    "dev:client": "webpack --env development --watch",
    "build:server": "cross-env NODE_ENV=production npm-run-all copy-views tsc",
    "build:client": "cross-env NODE_ENV=production webpack --env production",
    "postinstall": "npm-run-all build:server build:client",
    "migration:create": "typeorm migration:create -n",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert"
  },
  "dependencies": {
    "chance": "^1.1.6",
    "concurrently": "^5.2.0",
    "cookie-parser": "^1.4.5",
